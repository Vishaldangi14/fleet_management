<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_fleet_management">
        <field name="name">Fleet Management</field>
        <field name="description">category For Fleet Management</field>
    </record>

    <record id="group_fleetmanagement_staff" model="res.groups">
        <field name="name">staff</field>
        <field name="category_id" ref="module_category_fleet_management"/>
    </record>

    <record id="group_fleetmanagement_customer" model="res.groups">
        <field name="name">customer</field>
        <field name="category_id" ref="module_category_fleet_management"/>
    </record>

    <record id="group_fleetmanagement_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_fleet_management"/>
        <!-- <field name="implied_ids" eval="[(4, ref('group_school_student'))]"/> -->
    </record>
    <record id="ir_rule_mail_notifications_group_user_1" model="ir.rule">
        <field name="name">Customer Only</field>
        <field name="model_id" ref="group_fleetmanagement_customer"/>
        <field name="groups" eval="[Command.link(ref('fleet_management.group_fleetmanagement_customer'))]"/>
        <field name="domain_force">[('name_id', '=', user.partner_id.id)]</field>
    </record>

</odoo>