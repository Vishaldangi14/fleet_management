<odoo>

    <!-- tree view -->

    <record id="FleetCustomer_view_tree" model="ir.ui.view">
        <field name="name">FleetCustomer.view.tree</field>
        <field name="model">fleet.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- form view -->

    <record id="FleetCustomer_view_form" model="ir.ui.view">
        <field name="name">FleetCustomer.view.form</field>
        <field name="model">fleet.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action -->

    <record id="action_FleetCustomer_detail" model="ir.actions.act_window">
        <field name="name">FleetCustomer Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fleet.customer</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <!-- menuitem -->

    <menuitem id="menu_FleetCustomer_data"
              name="Fleet Customer"
              parent="menu_vehicle"/>

